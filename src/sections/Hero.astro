---
// Hero component for Udenar Cloud
---

<section id="#" class="relative -mt-24 min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-background via-background/95 to-background/90">
  <!-- Background Elements -->
  <div class="absolute inset-0 bg-grid-pattern opacity-[0.02]"></div>
  <div class="absolute top-1/3 left-1/4 w-72 h-72 bg-green-600/5 rounded-full blur-3xl"></div>
  <div class="absolute bottom-1/3 right-1/4 w-64 h-64 bg-accent/10 rounded-full blur-3xl"></div>

  <div class="container mx-auto px-6 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center max-w-6xl mx-auto">
      <!-- Content Section -->
      <div class="space-y-8 text-center lg:text-left">
        <!-- Main Heading -->
        <div class="space-y-6">
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight">
            <span class="bg-gradient-to-r from-green-600 to-green-600/70 bg-clip-text text-transparent">
              Udenar
            </span>
            <span class="text-amber-400 block">Cloud</span>
          </h1>

          <p class="text-lg md:text-xl text-muted-amber-400 max-w-xl leading-relaxed">
            Here we host the projects of systems engineering students, providing a reliable platform for learning and development.
          </p>
        </div>

        <!-- CTA Button -->
        <div class="flex justify-center lg:justify-start">
          <a
            href="/deploy"
            class="group relative text-white inline-flex items-center justify-center gap-3 px-8 py-4 bg-green-600 text-green-600-amber-400 rounded-2xl font-semibold text-lg transition-all duration-300 hover:bg-green-600/90 hover:scale-105 hover:shadow-lg hover:shadow-green-600/25"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
            </svg>
            <span>Alojar mi sitio web</span>
          </a>
        </div>
      </div>

      <!-- Image Section -->
      <div class="relative flex justify-center lg:justify-end">
        <div class="relative">
          <!-- Server Illustration Container -->
          <div class="relative p-8 rounded-3xl bg-background/40 backdrop-blur-xl border border-border/50 shadow-2xl">
            <div class="absolute inset-0 bg-gradient-to-br from-green-600/5 to-accent/5 rounded-3xl"></div>

            <!-- Server/Hosting Illustration -->
            <div class="relative w-80 h-80 flex items-center justify-center">
              <div class="w-full h-full flex flex-col items-center justify-center space-y-4">
                <!-- Server Stack -->
                <div class="space-y-3">
                  <!-- Server 1 -->
                  <div class="w-48 h-12 bg-green-600/20 rounded-lg border border-green-600/30 flex items-center justify-between px-4">
                    <div class="flex space-x-2">
                      <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                      <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                      <div class="w-2 h-2 bg-yellow-400 rounded-full"></div>
                    </div>
                    <div class="text-xs text-muted-amber-400">Server 01</div>
                  </div>
                  
                  <!-- Server 2 -->
                  <div class="w-48 h-12 bg-green-600/15 rounded-lg border border-green-600/25 flex items-center justify-between px-4">
                    <div class="flex space-x-2">
                      <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                      <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                      <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                    </div>
                    <div class="text-xs text-muted-amber-400">Server 02</div>
                  </div>
                  
                  <!-- Server 3 -->
                  <div class="w-48 h-12 bg-green-600/10 rounded-lg border border-green-600/20 flex items-center justify-between px-4">
                    <div class="flex space-x-2">
                      <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                      <div class="w-2 h-2 bg-yellow-400 rounded-full"></div>
                      <div class="w-2 h-2 bg-red-400 rounded-full"></div>
                    </div>
                    <div class="text-xs text-muted-amber-400">Server 03</div>
                  </div>
                </div>

                <!-- Cloud Connection -->
                <div class="flex items-center space-x-4 mt-6">
                  <svg class="w-12 h-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
                  </svg>
                  <div class="text-sm text-muted-amber-400">Cloud Hosting</div>
                </div>
              </div>
            </div>

            <!-- Floating Status Indicator -->
            <div class="absolute -top-4 -right-4 w-16 h-16 bg-green-500/20 rounded-2xl backdrop-blur-sm border border-green-500/30 flex items-center justify-center">
              <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
            </div>
          </div>

          <!-- Background Glow -->
          <div class="absolute inset-0 bg-gradient-to-r from-green-600/20 to-accent/20 rounded-3xl blur-3xl -z-10 scale-110"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Gradient -->
  <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-background to-transparent"></div>
</section>

<style>
  .bg-grid-pattern {
    background-image: radial-gradient(circle, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
    background-size: 20px 20px;
  }
</style>
